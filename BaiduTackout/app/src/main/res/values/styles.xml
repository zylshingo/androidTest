<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="myratingbar"
           parent="@android:style/Widget.RatingBar">


        <item name="android:progressDrawable">
            @drawable/myratingbar
        </item>
        <item name="android:minHeight">20sp</item>
        <item name="android:maxHeight">20sp</item>

    </style>

    <style name="MyList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12sp</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="MyImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">20sp</item>
        <item name="android:maxHeight">20sp</item>
    </style>

    <style name="MyTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorLine</item>
        <item name="android:layout_height">25sp</item>
    </style>

    <style name="MyLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorLine</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:layout_marginRight">20sp</item>
        <item name="android:layout_marginLeft">20sp</item>
    </style>
</resources>


